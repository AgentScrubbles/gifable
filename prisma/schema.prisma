generator client {
  provider = "prisma-client-js"
}

// Supported providers: "sqlite" (default) or "postgresql"
// IMPORTANT: The provider below MUST match your DATABASE_URL format
// - Use "sqlite" for: file:./dev.db
// - Use "postgresql" for: postgresql://...
// After changing provider, run: npx prisma generate
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Media {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  url       String
  thumbnailUrl String?
  fileHash   String?
  labels     String?
  altText    String?
  width      Int?
  height     Int?
  color      String?
  size       Int?
  isPublic   Boolean  @default(true)
  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  username     String   @unique
  passwordHash String
  medias       Media[]
  apiKeys      ApiKey[]
  mediaViews   MediaView[]
  isAdmin      Boolean  @default(false)
  lastLogin    DateTime?
  apiToken     String?
  preferredLabels String?
  theme        String?
  giphyApiKey  String?
}

model ApiKey {
  id          String    @id @default(uuid())
  name        String
  key         String    @unique
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  enabled     Boolean   @default(true)
  createdAt   DateTime  @default(now())
  lastUsedAt  DateTime?

  @@index([key])
  @@index([userId])
}

model MediaView {
  id        String   @id @default(uuid())
  mediaId   String
  viewedAt  DateTime @default(now())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userAgent String?

  @@index([mediaId])
  @@index([viewedAt])
}
